<?xml version="1.0" encoding="UTF-8" ?>
<CycloneDDS xmlns="https://cdds.io/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://cdds.io/config https://raw.githubusercontent.com/eclipse-cyclonedds/cyclonedds/master/etc/cyclonedds.xsd">
    <Domain id="any">
        <General>
            <!-- Disable shared memory for cross-machine communication -->
            <EnableMulticastLoopback>true</EnableMulticastLoopback>
        </General>
        <Internal>
            <!-- Increase write-side buffers to prevent backpressure -->
            <SocketReceiveBufferSize min="10MB"/>
            <SocketSendBufferSize min="10MB"/>
            <!-- Don't let slow readers affect writers -->
            <SynchronousDeliveryPriorityThreshold>0</SynchronousDeliveryPriorityThreshold>
            <MaxQueuedRexmitBytes>10MB</MaxQueuedRexmitBytes>
            <RetransmitMerging>never</RetransmitMerging>
        </Internal>
        <Tracing>
            <Verbosity>warning</Verbosity>
        </Tracing>
    </Domain>
</CycloneDDS>
